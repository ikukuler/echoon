{
  "name": "echowall-backend",
  "version": "1.0.0",
  "description": "Minimal backend for EchoWall with Firebase and Supabase",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:old": "nodemon server.js",
    "test-connections": "tsx src/test-connections.ts",
    "test-rate-limits": "tsx src/rate-limit-test.ts",
    "demo:jobs": "tsx demo-bull-board.ts",
    "queue:monitor": "echo 'Bull Board is available at http://localhost:3000/admin/queues when server is running'",
    "docker:setup": "./docker-setup.sh",
    "redis:start": "./start-redis.sh",
    "redis:stop": "docker stop echowall-redis-local 2>/dev/null || brew services stop redis 2>/dev/null || echo 'Redis stopped'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "docker:build": "docker build -t echowall-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env echowall-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:logs": "docker-compose logs -f app"
  },
  "dependencies": {
    "@bull-board/api": "^5.10.2",
    "@bull-board/express": "^5.10.2",
    "@supabase/supabase-js": "^2.38.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^4.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.4.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "express",
    "firebase",
    "supabase",
    "backend"
  ],
  "author": "",
  "license": "ISC"
}
